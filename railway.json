{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.mysql"
  },
  "deploy": {
    "healthcheckPath": "/health/detailed",
    "healthcheckTimeout": 900,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 