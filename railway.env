# Railway用環境変数設定
# Railwayの環境変数で以下の値を設定してください

# アプリケーション設定
APP_NAME="Mental Health Forum"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-backend-url.railway.app

# データベース設定
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/database/database.sqlite

# セッション設定
SESSION_DRIVER=file
SESSION_LIFETIME=120

# キャッシュ設定
CACHE_DRIVER=file

# ファイルシステム設定
FILESYSTEM_DISK=local

# ログ設定
LOG_CHANNEL=stack
LOG_LEVEL=error

# メール設定（必要に応じて）
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ブロードキャスト設定
BROADCAST_DRIVER=log

# キュー設定
QUEUE_CONNECTION=sync 